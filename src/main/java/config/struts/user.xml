<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
    "http://struts.apache.org/dtds/struts-2.1.7.dtd">

<struts>

    <package name="user-action" namespace="/" extends="struts-default">

        <result-types>
            <result-type name="tiles" class="org.apache.struts2.views.tiles.TilesResult" />
        </result-types>

        <interceptors>

            <interceptor name="language" class="com.kovka.web.interceptor.LanguageInterceptor"/>
            <interceptor name="authenticateInterceptor" class="com.kovka.web.interceptor.AuthenticateInterceptor"/>

            <interceptor-stack name="userStack">
                <interceptor-ref name="language"/>
                <interceptor-ref name="defaultStack"/>
                <interceptor-ref name="authenticateInterceptor"/>
            </interceptor-stack>

        </interceptors>

        <default-interceptor-ref name="userStack"/>

        <global-results>
            <result name="login" type="redirect">admin.htm</result>
            <result name="user-exception" type="chain">user-exception</result>
        </global-results>

        <global-exception-mappings>
            <exception-mapping exception="java.lang.Exception" result="user-exception"/>
        </global-exception-mappings>

        <action name="user-exception" class="ExceptionHandlerAction">
            <result type="redirect">error.htm</result>
        </action>

        <action name="error">
            <result>/WEB-INF/pages/error/500.jsp</result>
        </action>

        <action name="user-home">
            <result name="success" type="tiles">admin-home</result>
        </action>

        <action name="user-logout" class="Logout">
            <interceptor-ref name="defaultStack"/>
            <result type="redirect">admin.htm</result>
        </action>


        <!--Data upload/download-->

        <action name="data-download" class="DataDownloadAction">
            <result name="success" type="stream">
                <param name="contentType">application/octet-stream</param>
                <param name="inputName">inputStream</param>
                <param name="contentDisposition">attachment;filename="${dataFileName}"</param>
                <param name="bufferSize">4096</param>
            </result>
            <result name="start" type="redirect">start.htm</result>
        </action>

        <!--SketchAction-->

        <action name="sketches" class="SketchAction" method="listView">
            <result name="success" type="tiles">sketches</result>
        </action>

        <action name="sketch" class="SketchAction" method="view">
            <result name="success" type="tiles">sketch</result>
        </action>

        <action name="sketch-add-view"  >
            <result name="success" type="tiles">sketch-add-view</result>
        </action>

        <action name="sketch-images-add-view"  class="SketchUploadAction" method="view">
            <result name="success" type="tiles">sketch-images-add-view</result>
            <result name="input" type="tiles">sketches</result>
        </action>

        <action name="sketch-product-add-view"  class="SketchProductUploadAction" method="view">
            <result name="success" type="tiles">sketch-product-add-view</result>
            <result name="input" type="tiles">sketches</result>
        </action>

        <action name="sketch-add" class="SketchAction" method="add">
            <result name="success" type="redirect">sketch.htm</result>
            <result name="error" type="tiles">sketches</result>
        </action>

        <action name="sketch-delete" class="SketchAction" method="delete">
            <result name="success" type="redirect">sketches.htm</result>
            <result name="error" type="tiles">sketches</result>
        </action>


    </package>

</struts>