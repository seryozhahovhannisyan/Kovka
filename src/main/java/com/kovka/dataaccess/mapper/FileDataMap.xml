<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.kovka.dataaccess.mapper.namespace.FileDataMap">

    <resultMap id="rmFileDataSimple" type="FileData">
        <id property="id" column="id"/>
        <result property="fileName" column="file_name"/>
        <result property="contentType" column="content_type"/>
        <result property="size" column="size"/>
        <result property="creationDate" column="creation_date"/>
        <result property="status" column="status"/>
        <result property="order" column="order"/>
        <result property="sketchId" column="sketch_id"/>
        <result property="isMachine" column="is_machine"/>
    </resultMap>

    <!--
    ###################################################################################################################
    ################################################    Create     ####################################################
    ###################################################################################################################
    -->

    <insert id="add" parameterType="FileData">

        INSERT INTO f_data(
            `file_name`,
            `content_type`,
            `size`,
            `creation_date`,
            `status`,
            `order`,
            `sketch_id`,
            `is_machine`
        ) VALUES (
            #{fileName},
            #{contentType},
            #{size},
            #{creationDate},
            #{status},
            #{order},
            #{sketchId},
            #{isMachine}
        )

        <selectKey keyProperty="id" resultType="_long">
            SELECT LAST_INSERT_ID() AS `id`
        </selectKey>

    </insert>

    <!--
   ###################################################################################################################
   ################################################    Read     ####################################################
   ###################################################################################################################
   -->
    <select id="getById"
            resultMap="rmFileDataSimple"
            parameterType="_long">

        SELECT * FROM f_data
        WHERE id = #{id}

    </select>

    <select id="getBySketchId"
            resultMap="rmFileDataSimple"
            parameterType="_long">

        SELECT * FROM f_data
        WHERE sketch_id = #{sketchId}

    </select>

    <select id="getMachineData"
            resultMap="rmFileDataSimple" >

        SELECT * FROM f_data
        WHERE is_machine = 1

    </select>

    <select id="getDefaultSketchImg"
            resultMap="rmFileDataSimple"
            parameterType="_long">

        SELECT * FROM f_data
        WHERE sketch_id = #{sketchId}

    </select>

    <select id="getSketchImg"
            resultMap="rmFileDataSimple"
            parameterType="_long">

        SELECT * FROM f_data
        WHERE sketch_id = #{sketchId}

    </select>

    <select id="getByParams"
            resultMap="rmFileDataSimple"
            parameterType="map">

        SELECT * FROM f_data

    </select>
    <!--
   ###################################################################################################################
   ################################################    Update     ####################################################
   ###################################################################################################################
   -->
    <update id="update" parameterType="FileData">
        UPDATE f_data
        SET status = #{status}, file_name = #{fileName}
        WHERE id = #{id}
    </update>

    <update id="delete" parameterType="FileData">
        UPDATE f_data
        SET status = #{status}
        WHERE id = #{id}
    </update>


</mapper>
